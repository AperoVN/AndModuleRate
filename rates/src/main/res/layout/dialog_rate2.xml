<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/btn_scan"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:maxLines="2"
            android:text="We are working hard for a better user experience"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:maxLines="2"
            android:text="We appreciate you if you can rate us"
            android:textColor="#8D8D8D"
            android:textSize="@dimen/_12sdp"
            android:typeface="serif" />


        <com.ymb.ratingbar_lib.RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:drawable_empty="@drawable/ic_star2_inactive"
            app:drawable_filled="@drawable/ic_star2_active"
            app:drawable_half="@drawable/ic_star2_inactive"
            app:drawable_margin="@dimen/_16sdp"
            app:drawable_size="@dimen/_30sdp"
            app:is_indicator="false"
            app:max_count="5"
            app:rating="0" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_16sdp"
            android:src="@drawable/ic_hand" />

        <LinearLayout
            android:id="@+id/ln_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="2"
                android:text="Cancel"
                android:textColor="#425268"
                android:textSize="@dimen/_14sdp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_24sdp"
                android:gravity="center"
                android:maxLines="2"
                android:text="Rate"
                android:textColor="#FF7F0A"
                android:textSize="@dimen/_16sdp"
                android:typeface="serif" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_feedback"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:background="@drawable/bg_edit_feedback"
                android:gravity="top"
                android:hint="Please leave a feedback to help us improve product"
                android:padding="@dimen/_5sdp"
                android:textColorHint="#AEB9C4"
                android:textSize="@dimen/_10sdp">

            </EditText>

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/bg_submit"
                android:backgroundTint="#FF7F0A"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#FFF"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>